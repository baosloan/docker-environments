[mysqld]
# 基本配置
server-id = 1
port = 3306

# 字符集配置
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# 二进制日志配置 (主从复制必需)
log-bin = mysql-bin
binlog-format = ROW
binlog-do-db = testdb

# 主从复制配置
auto_increment_increment = 2
auto_increment_offset = 1

# 性能优化
innodb_buffer_pool_size = 128M

# 连接配置
max_connections = 200

# 安全配置
skip-name-resolve

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
